@using System.Data;
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    DataSet ds = (DataSet)ViewBag.organisationlist;
    DataTable dt = new DataTable();
    if (ds != null && ds.Tables[0].Rows.Count > 0)
    {
        dt = ds.Tables[0];
    }
}

<div class="contentwrapper">
    <!--Content wrapper-->
    <div class="heading">
        <!--  .heading-->
        <h3>Organization List</h3>
        <div class="resBtnSearch"><a href="#"><span class="s16 icomoon-icon-search-3"></span></a></div>
        <!--  /search -->
    </div>
    <!-- End  / heading-->
    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default">
                <!-- Start .panel -->

                <div class="panel-heading">
                    <h4 class="panel-title">Organization List</h4>
                </div>
                <div class="panel-body">
                    @if (TempData.Count > 0)
                    {
                        if (!string.IsNullOrEmpty((string)TempData["msg"]))
                        {
                            <div class="alert alert-success fade in">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-check alert-icon"></i>
                                <strong> @TempData["msg"]</strong>
                            </div>
                        }

                    }

                    @if (dt.Rows.Count > 0)
                    {
                        <table id="tabletools" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Organization Name</th>
                                    <th style="width: 35%">Contact</th>
                                    <th style="width: 35%">Address</th>
                                    <th style="width: 35%">City</th>
                                    <th style="width: 35%">State</th>
                                    <th style="width: 35%">Zip</th>
                                    <th style="width: 35%">EIN#</th>
                                    <th style="width: 35%">Tax Id</th>
                                    <th style="width: 35%">No. of Users</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @*<tfoot>
                                <tr>
                                    <th>Slider Image</th>
                                    <th>Slider Title</th>
                                    <th>Status</th>
                                    <th>Action</th>*@

                            <tbody>

                                @foreach (System.Data.DataRow dr in dt.Rows)
                                {
                                    <tr>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["OrganizationName"].ToString()))
                                            {
                                                @dr["OrganizationName"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["OrganizationContactNumber"].ToString()))
                                            {
                                                @dr["OrganizationContactNumber"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["Address"].ToString()))
                                            {
                                                @dr["Address"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["City"].ToString()))
                                            {
                                                @dr["City"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["State"].ToString()))
                                            {
                                                @dr["State"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["Zip"].ToString()))
                                            {
                                                @dr["Zip"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["EIN#"].ToString()))
                                            {
                                                @dr["EIN#"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["TAXID"].ToString()))
                                            {
                                                @dr["TAXID"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["noofuser"].ToString()))
                                            {
                                               <a href="@Url.Action("UserList","Organisation",new { Id=@dr["OrganizationId"].ToString()})">@dr["noofuser"].ToString() <span>User(s)</span></a>
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (dr["OrganizationActive"].ToString() == "True")
                                            {

                                            <a href="@Url.Action("orgstatus", "Organisation", new { @id = @dr["OrganizationId"].ToString(),@id1 = @dr["OrganizationActive"].ToString() })" class="btn btn-success ml10">@dr["OrganizationActive"]</a>
                                            }
                                            else
                                            {

                                            <a href="@Url.Action("orgstatus", "Organisation", new { @id = @dr["OrganizationId"].ToString(),@id1 = @dr["OrganizationActive"].ToString() })" class="btn btn-danger ml10">@dr["OrganizationActive"]</a>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    }
                    else
                    {
                        <h3 style="color: red">No Data Available.</h3>
                    }
                </div>

            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <!-- End .row -->
</div>

<script type="text/javascript">
    function ConfirmationDelete() {
        if (confirm("Are you sure you want to remove") == false) {
            return false;
        }
    }
</script>
