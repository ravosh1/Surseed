@using System.Data;
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    DataSet ds = (DataSet)ViewBag.organisationuserlist;
    DataTable dt = new DataTable();
    if (ds != null && ds.Tables[0].Rows.Count > 0)
    {
        dt = ds.Tables[0];
    }
}

<div class="contentwrapper">
    <!--Content wrapper-->
    <div class="heading">
        <!--  .heading-->
        <h3>User List</h3>
        <div class="resBtnSearch"><a href="#"><span class="s16 icomoon-icon-search-3"></span></a></div>
        <!--  /search -->
    </div>
    <!-- End  / heading-->
    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- col-lg-12 start here -->
            <div class="panel panel-default">
                <!-- Start .panel -->

                <div class="panel-heading">
                    <h4 class="panel-title">User List</h4>
                </div>
                <div class="panel-body">
                    @if (TempData.Count > 0)
                    {
                        if (!string.IsNullOrEmpty((string)TempData["msg"]))
                        {
                            <div class="alert alert-success fade in">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-check alert-icon"></i>
                                <strong> @TempData["msg"]</strong>
                            </div>
                        }

                    }

                    @if (dt.Rows.Count > 0)
                    {
                        <table id="tabletools" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Organization Usertype</th>
                                    <th style="width: 35%">Name</th>
                                    <th style="width: 35%">Gender</th>
                                    <th style="width: 35%">Age</th>
                                    <th style="width: 35%">Phone</th>
                                    <th style="width: 35%">Email</th>
                                    @*<th style="width: 35%">EIN#</th>
                                        <th style="width: 35%">Tax Id</th>
                                        <th style="width: 35%">No. of Users</th>*@
                                    @*<th>Action</th>*@
                                </tr>
                            </thead>


                            <tbody>

                                @foreach (System.Data.DataRow dr in dt.Rows)
                                {
                                    <tr>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["OrganizationUserType"].ToString()))
                                            {
                                                @dr["OrganizationUserType"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["FirstName"].ToString()))
                                            {
                                                <span>
                                                    @dr["FirstName"].ToString()
                                                </span> 
                                                <span>
                                                    @dr["LastName"].ToString()
                                                </span>
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["Gender"].ToString()))
                                            {
                                                @dr["Gender"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["Age"].ToString()))
                                            {
                                                @dr["Age"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["Phone"].ToString()))
                                            {
                                                @dr["Phone"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(@dr["EmailId"].ToString()))
                                            {
                                                @dr["EmailId"].ToString()
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>



                                        @*<td>
                                            <a href="@Url.Action("EditSlider", "admin", new { @id = @dr["OrganizationId"].ToString() })" class="btn btn-success ml10"><i class="fa fa-pencil-square-o"></i>Edit</a>
                                            <a onclick="return ConfirmationDelete();" href="@Url.Action("DeleteSlider", "admin", new { @id = @dr["OrganizationId"].ToString() })" class="btn btn-danger ml10"><i class="fa fa-trash"></i>Delete</a>
                                        </td>*@
                                    </tr>
                                }

                            </tbody>

                        </table>
                    }
                    else
                    {
                        <h3 style="color: red">No Data Available.</h3>
                    }
                </div>

            </div>
            <!-- End .panel -->
        </div>
        <!-- col-lg-12 end here -->
    </div>
    <!-- End .row -->
</div>

<script type="text/javascript">
    function ConfirmationDelete() {
        if (confirm("Are you sure you want to remove") == false) {
            return false;
        }
    }
</script>

